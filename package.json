{
  "name": "obsonic",
  "version": "1.0.0",
  "description": "A highly customisable music player for your streaming setup",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "dev": "nodemon server.js",
    "server": "node server.js",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win portable",
    "build-mac": "electron-builder --mac",
    "build-mac-dmg": "electron-builder --mac dmg",
    "build-mac-zip": "electron-builder --mac zip",
    "dist": "electron-builder",
    "dist-all": "electron-builder --win --mac"
  },
  "keywords": [
    "music",
    "playlist",
    "player",
    "remote",
    "obs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^10.1.0",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "music-metadata": "^7.14.0",
    "path": "^0.12.7",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.obsonic.app",
    "productName": "OBSonic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "utils/**/*",
      "public/**/*",
      "playlists/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "app/public"
      },
      {
        "from": "playlists",
        "to": "app/playlists"
      },
      {
        "from": "utils",
        "to": "app/utils"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/assets/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/assets/icon.png",
      "category": "public.app-category.music",
      "minimumSystemVersion": "10.15.0"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
